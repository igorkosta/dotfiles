'.source.raml':
  'get':
    'prefix': 'get'
    'body': """get:
              	description: |
              		Retrieve resource
              	responses:
              		200:
              			description: |
              				Succesfully retrieved resource
              ${1:}
            """
  'delete':
    'prefix': 'delete'
    'body': """delete:
              	description: |
              		Delete resource
              	responses:
              		204:
              			description: |
              				Succesfully deleted resource
              ${1:}
              """
  'RAML':
    'prefix': '#%'
    'body': """#%RAML 0.8
               ---
               title: title
               version: version
               baseUri: https://baseUri/version/
               ${1:}
            """
  'patch':
    'prefix': 'patch'
    'body': """patch:
              	description: |
              		Update a field of a resource
              	body:
              		application/json: !!null
              	responses:
              		204:
              			description: Succesfully updated resource
              ${1:}
            """
  'post':
    'prefix': 'post'
    'body': """post:
              	description: |
              		Create a new resource
              	body:
              		application/json: !!null
              	responses:
              		201:
              			description: |
              				Succesfully created a new resource
              			headers:
              				Location:
              					description: |
              						Location of the newly created resource
              					type: string
              					required: false
              ${1:}
            """
  'put':
    'prefix': 'put'
    'body': """put:
              	description: |
              		Update an existing resource
              	body:
              		application/json:
              	responses:
              		204:
              			description: |
              				Succesfully updated the resource
              ${1:}
            """

  'documentation':
    'prefix': 'documentation'
    'body': """documentation:
              	- title: title
              		content: |
              			content
              ${1:}
            """
